{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "add": {
      "exact": true
    },
    "publish": {
      "allowBranch": ["main", "release", "release/*"]
    },
    "version": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "exact": true,
      "message": "docs(release): design system packages",
      "syncWorkspaceLock": true
    }
  }
}

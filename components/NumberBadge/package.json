{
  "name": "@gemeente-denhaag/number-badge",
  "version": "2.0.1",
  "description": "A number badge component",
  "bugs": "https://github.com/nl-design-system/denhaag/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/nl-design-system/denhaag.git",
    "directory": "components/NumberBadge"
  },
  "license": "EUPL-1.2",
  "author": "Municipality of The Hague",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/mjs/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./index.css": "./dist/index.css"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c ../../rollup.config.mjs",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "watch:components": "chokidar --silent --follow-symlinks \"src/**/*\" -c \"pnpm run build\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@nl-design-system-candidate/number-badge-css": "1.1.4",
    "@nl-design-system-candidate/number-badge-react": "1.3.1"
  },
  "peerDependencies": {
    "react": "18 || 19",
    "react-dom": "18 || 19"
  }
